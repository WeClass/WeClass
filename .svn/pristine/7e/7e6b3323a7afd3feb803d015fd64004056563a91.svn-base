body {
    height: 100%;
	min-height: 100%;
}
.contro {
	width: 100%;
	height: 40px;
	float: left;
	background-color: #fff;
	position: relative;
}
.play_button {
	width: 20px;
	height: 40px;
	position: absolute;
	left: 10px;
}
.play_button img {
	width: 100%;
	height: 20px;
	float: left;
	margin-top: 8px;
}
.play_line {
	width: 65%;
	height: 20px;
	position: absolute;
	left: 45px;
}
.play_time {
	width: 54px;
	height: 40px;
	position: absolute;
	right: 25px;
}
.play_time span {
	float: left;
	line-height: 36px;
	font-size: 10px;
}
.play_qp {
	width: 20px;
	height: 40px;
	float: left;
	position: absolute;
	right: 5px;
}
.play_qp img {
	width: 15px;
	height: 15px;
	float: right;
	margin-top: 10px;
}
