html {
	height: 100%;
}
body {
	background-color: #FFFFFF;
	height: 100%
}

.outimgbackground{
    height:40px;
	width:100%;
	 background: url("../../image/sidepage/topsidepage.gif") repeat-x;
}
.imgbackground{
    height:110px;
	width:100%;
	background: url("../../image/sidepage/topsidepage.gif") repeat-x;
  
}


/*用户图像 */
.login {
	color: #A4A4A5;
	height:80px;
	width:80px;
	border-radius:50px;
	background-size: 80px;
	background-position: left;
	margin-left:70px;/*50+20*/
	margin-right:200px;
	background-repeat: no-repeat ;
	background-image: url("../../image/sidepage/pic_headphoto_normal.png");
}
.logintitle { 
    color: #A4A4A5;  
	display:inline-block;
	width:190px;/*140+50*/
		
}

.loginuser{
   color: #A4A4A5;
   display:inline-block;
   width:140px;/*图片宽度140*/
   text-align: center;
   margin-left: 42px;/*50/2-3*/
   margin-top: 5px;
   overflow:hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
/*外面的大盒子*/
.outInformation{
 width: 100%;
 height: 500px;
 background: url("../../image/sidepage/bgsidepage.gif") repeat-x;
}
/*条目总体样式*/
.item {
	display: table;
	height: 80dp;
	width: 100%;
	
}
.item .itemlogo, .item .itemshelf {
	display: table-cell;
	vertical-align: middle;
}
.item .itemlogo {
	width: 60px;
}
.item .itemlogo img {
	margin-top: 10px;
	margin-left: 20px;
	width: 40px;
}
.item .itemshelf .shelfinfo01 {
	font-size: 20px;
	margin-top: 15px;
	margin: 8px;
	color: #fff;
	
}
